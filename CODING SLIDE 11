package SelfProgramming;
import java.util.Scanner;

class notesslide11 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		

		double total ;
		double MAX_RATE;
		double MAX;
        
		
		Scanner scan = new Scanner(System.in);
		System.out.println("Enter the total amount :");
		total = scan.nextDouble();
		System.out.println("Your total amount :"+ total);
		System.out.println("Now enter the MAX amount :");
		MAX = scan.nextDouble();
		System.out.println("The  MAX amount :"+ MAX);
		System.out.println("The maximum rate is ?");
		MAX_RATE = scan.nextDouble();
		System.out.println("The maximum rate is :"+ MAX_RATE);
		
		double charge = total * MAX_RATE;
		System.out.println("The charge is :"+ charge);
		if (total > MAX)
			System.out.println ("The total is " + total);

	}
